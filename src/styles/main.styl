
@import 'normalizecss/normalize.css'

@import 'prism/themes/prism-okaidia.css'

.bespoke-parent
  position: absolute
  top: 0
  left: 0
  right: 0
  bottom: 0
  overflow: hidden

.bespoke-slide
  position: absolute
  top: 0
  left: 0
  bottom: 0
  right: 0
  display: flex
  flex-direction: column
  justify-content: center
  align-items: center
  background: #000
  color: white

.bespoke-inactive
  opacity: 0
  pointer-events: none

.bespoke-bullet-inactive
  opacity: 0
  pointer-events: none

.bespoke-backdrop
  position: absolute
  top: 0
  left: 0
  right: 0
  bottom: 0
  z-index: -1
  opacity: 0

.bespoke-backdrop-active
  opacity: 1

.bespoke-progress-parent
  position: absolute
  top: 0
  left: 0
  right: 0
  height: .3vw

.bespoke-progress-bar
  position: absolute
  height: 100%
  background: #ccc
  transition: width .6s ease

body
  font-family: 'Museo Sans'
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;

h1,h2,h3
  font-weight: 100
  position: relative;
h1
  font-size: 40px
h2
  font-size: 35px
h3
  font-size: 30px
p
  font-size: 30px
  font-weight: 100
  line-height 1.5
strong
  font-weight: 500

.pad-sm
  padding: 0 20px
.pad-lg
  padding: 0 50px

.bg
  background-size: cover
  text-shadow: 0 1px #000, 0 2px 10px #000, 0 4px 20px #000
  text-align: center
  &:after
    content: ''
    display: block
    position: absolute
    background: rgba(#000, .2)
    background-image: radial-gradient(transparent, rgba(#000, .6))
    background-size: cover
    top: 0
    bottom: 0
    left: 0
    right: 0
  > *
    position: relative
    z-index: 10

.yellow-bg
  background: #f5da55
  color: #000
  text-align: center

.flex
  display: flex
  width: 100%

.flex-1
  flex: 1
  position: relative

.timeline
  margin: 0
  padding: 0
  list-style: none
  position: relative;
  bottom: -5em;

.timeline li
  margin: 0
  padding: 0

.subject
  position: absolute
  bottom: 0
  left: 0
  right: 0
  color: #000
  border-radius: 50px
  padding: 3px 0 4px;
  text-indent: 5px;
  font-size: 13px;
  &.join-right
    border-top-right-radius: 0
    border-bottom-right-radius: 0
  &.join-left
    border-top-left-radius: 0
    border-bottom-left-radius: 0
  &.html
    background: #E44D26
    color: #fff
  &.css
    background: #1572B6
    color: #fff
  &.js
    background: #F7DF1E
    color: #000
  &.php
    background: #6B7EB9
    color: #000
  &.ruby
    background: #D91404
    color: #fff
  &.logo
    background: #AA00AA
    color: #fff
  &.vb, &.asp, &.c, &.assembly
    background: #46B5E3
    color: #000
  &.sql
    background: #8701ad
    color: #fff
  &.java
    background: #F46600
    color: #000
  &.flash
    background: #ED1B24
    color: #fff
  &.python
    background: #FFD344
    color: #000
  &.svg
    background: #FFB13B
    color: #000

.languages
  list-style: none
  margin: 0
  padding: 0
  li
    margin: 0 0 1em
    padding: 0
  .subject
    position: static
    display: inline-block
    width: 100px
    text-align: center
    transform: scale(1.5)
    text-indent: 0

.year
  position: absolute
  bottom: -3.5em
  left: 0
  right: 0
  text-align: center
  color: rgba(#fff, .8)

.event, .release
  position: absolute
  bottom: -5em
  left: 0
  right: 0
  text-align: center
  color: rgba(#fff, .6)

.release
  bottom: -6.5em
  color: rgba(#fff, .4)

for num in (1..15)
  .years-{num}
    width: (num*100)% - 2px

for num in (1..10)
  .offset-{num}
    bottom: (num*2.5)em

pre
  min-width: 500px

.text-center
  text-align: center
